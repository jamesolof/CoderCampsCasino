    <script src="~/js/views/contact/contact.controller.js"></script>
    <script src="~/js/views/contact/contact.config.js"></script>
    <script src="~/js/views/contact/contact.js"></script>

    <script src="~/js/views/topup/topup.controller.js"></script>
    <script src="~/js/views/topup/topup.config.js"></script>
    <script src="~/js/views/topup/topup.js"></script>

    <script src="~/js/views/settings/settings.controller.js"></script>
    <script src="~/js/views/settings/settings.config.js"></script>
    <script src="~/js/views/settings/settings.js"></script>

    <script src="~/js/services/player.service.js"></script>
    <script src="~/js/services/settings.service.js"></script>
